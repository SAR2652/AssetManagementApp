<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jay.assetmanagementapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".NavDrawer"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PurchaseAsset"
            android:label="PurchaseAsset"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RequestAsset"
            android:label="RequestAsset"
            android:theme="@style/AppTheme" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Not_approved"></activity>
        <activity
            android:name=".AssetOwned"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AssetMaintenance"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AssetApproval"
            android:theme="@style/AppTheme" />
        <activity android:name=".GenerateReports"
            android:theme="@style/AppTheme"></activity>

        <activity android:name=".activity_distribute"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>